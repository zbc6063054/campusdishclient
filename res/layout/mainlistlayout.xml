<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="300.0dip"
  android:padding="10dip"
  android:background="@drawable/mainlist_item_selector"
  
  >
  <ImageView 
  	android:layout_width="80dip"
    android:layout_height="80dip"
    android:contentDescription="@string/main_listImage_content"
    android:id="@+id/main_listdetail_image"
    android:scaleType="fitXY"
    android:padding="2dip"
    android:background="@drawable/list_image_background_shape"/>
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dip"
    >
    <TextView 
	  	android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="25dip"
	    android:layout_gravity="center_vertical"
	    android:id="@+id/main_listdetail_text"/>
    <TextView 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="18dip"
	    android:id="@+id/main_listdetail_textPrice"
	    android:layout_gravity="bottom"
	    android:layout_marginBottom="5dip"
	    />
  </LinearLayout>
 
</LinearLayout>
